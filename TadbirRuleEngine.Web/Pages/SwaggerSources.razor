@page "/swagger-sources"
@using TadbirRuleEngine.Web.Models
@using TadbirRuleEngine.Web.Services
@inject ApiService ApiService
@inject IToastService ToastService

<PageTitle>منابع Swagger</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-cloud-download-fill me-2"></i>
            منابع Swagger
        </h2>
        <button class="btn btn-primary" @onclick="ShowCreateModal" disabled="@isLoading">
            <i class="bi bi-plus-lg me-1"></i>
            افزودن منبع جدید
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">در حال بارگذاری...</span>
            </div>
            <p class="mt-3 text-muted">در حال بارگذاری منابع...</p>
        </div>
    }
    else if (!swaggerSources.Any())
    {
        <div class="alert alert-info d-flex align-items-center" role="alert">
            <i class="bi bi-info-circle-fill fs-4 me-3"></i>
            <div>
                <h5 class="alert-heading mb-1">هیچ منبعی یافت نشد</h5>
                <p class="mb-0">برای شروع، یک منبع Swagger جدید اضافه کنید.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4 py-3">نام</th>
                                <th class="py-3">آدرس URL</th>
                                <th class="py-3 text-center">وضعیت</th>
                                <th class="py-3 text-center">آخرین همگام‌سازی</th>
                                <th class="py-3 text-center">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var source in swaggerSources)
                            {
                                <tr>
                                    <td class="px-4 py-3">
                                        <strong>@source.Name</strong>
                                        @if (!string.IsNullOrEmpty(source.Description))
                                        {
                                            <br />
                                            <small class="text-muted">@source.Description</small>
                                        }
                                    </td>
                                    <td class="py-3">
                                        <small class="text-muted font-monospace">@source.SwaggerUrl</small>
                                    </td>
                                    <td class="py-3 text-center">
                                        <span class="badge @(source.IsActive ? "bg-success" : "bg-secondary")">
                                            @(source.IsActive ? "فعال" : "غیرفعال")
                                        </span>
                                    </td>
                                    <td class="py-3 text-center">
                                        @if (source.LastSyncAt.HasValue)
                                        {
                                            <small class="text-muted">@source.LastSyncAt.Value.ToString("yyyy/MM/dd HH:mm")</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">هرگز</small>
                                        }
                                    </td>
                                    <td class="py-3 text-center">
                                        <button class="btn btn-sm btn-outline-primary" 
                                                @onclick="() => SyncSource(source.Id)"
                                                disabled="@isSyncing">
                                            @if (isSyncing && syncingSourceId == source.Id)
                                            {
                                                <span class="spinner-border spinner-border-sm me-1"></span>
                                            }
                                            else
                                            {
                                                <i class="bi bi-arrow-repeat me-1"></i>
                                            }
                                            همگام‌سازی
                                        </button>
                                        <button class="btn btn-sm btn-outline-secondary me-1" 
                                                @onclick="() => EditSource(source)">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" 
                                                @onclick="() => DeleteSource(source.Id)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<!-- Create/Edit Modal -->
@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <EditForm Model="currentSource" OnValidSubmit="SaveSource">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="bi bi-@(isEditMode ? "pencil" : "plus-lg") me-2"></i>
                            @(isEditMode ? "ویرایش منبع" : "افزودن منبع جدید")
                        </h5>
                        <button type="button" class="btn-close" @onclick="HideModal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-tag me-1"></i>
                                نام منبع
                            </label>
                            <InputText class="form-control" @bind-Value="currentSource.Name" 
                                       placeholder="مثال: API فروشگاه" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-link-45deg me-1"></i>
                                آدرس Swagger URL
                            </label>
                            <InputText class="form-control" @bind-Value="currentSource.SwaggerUrl" 
                                       placeholder="https://api.example.com/swagger/v1/swagger.json" />
                            <small class="form-text text-muted">
                                آدرس کامل فایل JSON یا YAML مربوط به Swagger/OpenAPI را وارد کنید
                            </small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-card-text me-1"></i>
                                توضیحات
                            </label>
                            <InputTextArea class="form-control" @bind-Value="currentSource.Description" 
                                           rows="3" placeholder="توضیحات اختیاری..." />
                        </div>
                        <div class="form-check form-switch">
                            <InputCheckbox class="form-check-input" @bind-Value="currentSource.IsActive" 
                                           id="isActiveSwitch" />
                            <label class="form-check-label fw-bold" for="isActiveSwitch">
                                <i class="bi bi-toggle-on me-1"></i>
                                فعال
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="HideModal">
                            <i class="bi bi-x-lg me-1"></i>
                            انصراف
                        </button>
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            else
                            {
                                <i class="bi bi-check-lg me-1"></i>
                            }
                            @(isEditMode ? "ذخیره تغییرات" : "ایجاد منبع")
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    private List<SwaggerSourceDto> swaggerSources = new();
    private bool isLoading = true;
    private bool showModal = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private bool isSyncing = false;
    private int? syncingSourceId = null;
    private CreateSwaggerSourceDto currentSource = new();
    private int? editingSourceId = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadSwaggerSources();
    }

    private async Task LoadSwaggerSources()
    {
        isLoading = true;
        try
        {
            swaggerSources = await ApiService.GetSwaggerSourcesAsync();
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"خطا در بارگذاری منابع: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowCreateModal()
    {
        currentSource = new CreateSwaggerSourceDto { IsActive = true };
        isEditMode = false;
        editingSourceId = null;
        showModal = true;
    }

    private void EditSource(SwaggerSourceDto source)
    {
        currentSource = new CreateSwaggerSourceDto
        {
            Name = source.Name,
            SwaggerUrl = source.SwaggerUrl,
            Description = source.Description,
            IsActive = source.IsActive
        };
        isEditMode = true;
        editingSourceId = source.Id;
        showModal = true;
    }

    private void HideModal()
    {
        showModal = false;
        currentSource = new CreateSwaggerSourceDto();
        isEditMode = false;
        editingSourceId = null;
    }

    private async Task SaveSource()
    {
        if (string.IsNullOrWhiteSpace(currentSource.Name) || string.IsNullOrWhiteSpace(currentSource.SwaggerUrl))
        {
            ToastService.ShowWarning("لطفاً نام و آدرس URL را وارد کنید");
            return;
        }

        isSaving = true;
        try
        {
            if (isEditMode && editingSourceId.HasValue)
            {
                var updateDto = new UpdateSwaggerSourceDto
                {
                    Name = currentSource.Name,
                    SwaggerUrl = currentSource.SwaggerUrl,
                    Description = currentSource.Description,
                    IsActive = currentSource.IsActive
                };
                var result = await ApiService.UpdateSwaggerSourceAsync(editingSourceId.Value, updateDto);
                if (result != null)
                {
                    ToastService.ShowSuccess("منبع با موفقیت به‌روزرسانی شد");
                    await LoadSwaggerSources();
                    HideModal();
                }
                else
                {
                    ToastService.ShowError("خطا در به‌روزرسانی منبع");
                }
            }
            else
            {
                var result = await ApiService.CreateSwaggerSourceAsync(currentSource);
                if (result != null)
                {
                    ToastService.ShowSuccess("منبع با موفقیت ایجاد شد");
                    await LoadSwaggerSources();
                    HideModal();
                }
                else
                {
                    ToastService.ShowError("خطا در ایجاد منبع");
                }
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"خطا: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task SyncSource(int id)
    {
        isSyncing = true;
        syncingSourceId = id;
        try
        {
            ToastService.ShowInfo("در حال همگام‌سازی...");
            var result = await ApiService.SyncSwaggerSourceAsync(id);
            if (result)
            {
                ToastService.ShowSuccess("همگام‌سازی با موفقیت انجام شد");
                await LoadSwaggerSources();
            }
            else
            {
                ToastService.ShowError("خطا در همگام‌سازی");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"خطا در همگام‌سازی: {ex.Message}");
        }
        finally
        {
            isSyncing = false;
            syncingSourceId = null;
        }
    }

    private async Task DeleteSource(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "آیا از حذف این منبع اطمینان دارید؟"))
        {
            try
            {
                var result = await ApiService.DeleteSwaggerSourceAsync(id);
                if (result)
                {
                    ToastService.ShowSuccess("منبع با موفقیت حذف شد");
                    await LoadSwaggerSources();
                }
                else
                {
                    ToastService.ShowError("خطا در حذف منبع");
                }
            }
            catch (Exception ex)
            {
                ToastService.ShowError($"خطا: {ex.Message}");
            }
        }
    }
}

@inject IJSRuntime JSRuntime