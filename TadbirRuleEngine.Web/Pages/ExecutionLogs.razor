@page "/execution-logs"
@using TadbirRuleEngine.Web.Models
@using TadbirRuleEngine.Web.Services
@inject ApiService ApiService

<PageTitle>Execution Logs</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>Execution Logs</h1>
            <p class="text-muted">Monitor policy and rule execution history.</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Started At</th>
                                <th>Policy</th>
                                <th>Rule</th>
                                <th>Status</th>
                                <th>Duration</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in executionLogs)
                            {
                                <tr>
                                    <td>
                                        <small>@log.StartedAt.ToString("yyyy-MM-dd HH:mm:ss")</small>
                                    </td>
                                    <td>
                                        <strong>@log.PolicyName</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(log.RuleName))
                                        {
                                            <small class="text-muted">@log.RuleName</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">-</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(log.Status)">
                                            @log.Status
                                        </span>
                                    </td>
                                    <td>
                                        <small>@log.DurationMs ms</small>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-info" @onclick="() => ShowLogDetails(log)">
                                            <i class="oi oi-eye"></i> Details
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                @if (!executionLogs.Any())
                {
                    <div class="text-center text-muted mt-4">
                        <p>No execution logs found. Execute some policies to see logs here.</p>
                    </div>
                }
            </div>
        </div>
    }
</div>

@if (selectedLog != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Execution Log Details</h5>
                    <button type="button" class="btn-close" @onclick="HideLogDetails"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Policy:</strong> @selectedLog.PolicyName
                        </div>
                        <div class="col-md-6">
                            <strong>Rule:</strong> @(selectedLog.RuleName ?? "N/A")
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <strong>Status:</strong> 
                            <span class="badge @GetStatusBadgeClass(selectedLog.Status)">@selectedLog.Status</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Duration:</strong> @selectedLog.DurationMs ms
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <strong>Started:</strong> @selectedLog.StartedAt.ToString("yyyy-MM-dd HH:mm:ss")
                        </div>
                        <div class="col-md-6">
                            <strong>Completed:</strong> @(selectedLog.CompletedAt?.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(selectedLog.Input))
                    {
                        <div class="mt-3">
                            <strong>Input:</strong>
                            <pre class="bg-light p-2 mt-1"><code>@selectedLog.Input</code></pre>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(selectedLog.Output))
                    {
                        <div class="mt-3">
                            <strong>Output:</strong>
                            <pre class="bg-light p-2 mt-1"><code>@selectedLog.Output</code></pre>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(selectedLog.ErrorMessage))
                    {
                        <div class="mt-3">
                            <strong>Error:</strong>
                            <div class="alert alert-danger mt-1">@selectedLog.ErrorMessage</div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideLogDetails">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<ExecutionLogDto> executionLogs = new();
    private bool isLoading = true;
    private ExecutionLogDto? selectedLog = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadExecutionLogs();
    }

    private async Task LoadExecutionLogs()
    {
        isLoading = true;
        executionLogs = await ApiService.GetExecutionLogsAsync();
        isLoading = false;
    }

    private void ShowLogDetails(ExecutionLogDto log)
    {
        selectedLog = log;
    }

    private void HideLogDetails()
    {
        selectedLog = null;
    }

    private string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "success" => "bg-success",
            "failed" => "bg-danger",
            "running" => "bg-primary",
            "skipped" => "bg-warning",
            _ => "bg-secondary"
        };
    }
}